extends layout

block content
  h1 #{title}

  form(method='POST' action='')
    div.form-group
      label(for='first_name') First Name:
      input#first_name.form-control(type='text', placeholder='First Name' name='first_name' value=(undefined===author ? '' : author.first_name), required='true' )
      label(for='family_name') Family Name:
      input#family_name.form-control(type='text', placeholder='Family Name' name='family_name' value=(undefined===author ? '' : author.family_name), required='true' )
      label(for='date_of_birth') Date of Birth:
      input#date_of_birth.form-control(type='date', placeholder='Date of Birth' name='date_of_birth' value=(undefined===author ? '' : author.date_of_birth), required='true' )
      label(for='date_of_death') Date of Death:
      input#date_of_death.form-control(type='date', placeholder='Date of Death' name='date_of_death' value=(undefined===author ? '' : author.date_of_death) )
    button.btn.btn-primary(type='submit') Submit

  if errors
   ul
    for error in errors
     li!= error.msg